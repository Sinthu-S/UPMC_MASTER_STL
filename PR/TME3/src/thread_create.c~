#define _XOPEN_SOUCE 700
#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>

#define N 5



void* funcThread(void* arg){
  printf("Numero de crÃ©ation %d \n tid %d \n", (int)*arg, (long unsigned)pthread_self());
  pthread_exit((int)arg*2);
}

int main(){
  pthread_t tid[N];
  int valRetour[N];
  int i=N-1;

  while(i>-1){
    if(pthread_create(&tid[i], NULL, funcThread, (void*)&i) != 0){
      perror("erreur creation thread");
      exit(1);
    }
    i--;
  }

  i++;
    
  while(i<N){
    if(pthread_join(tid[i],(void**) &valRetour[i]) != 0){
       perror("erreur attente thread");
       exit(1);
    }
    i++;
  }

  i--;
  while(i>-1){
    printf("Numero %d, val %d\n", i, valRetour[i]);
    i--;
  }
  
  return 0;
  
}
